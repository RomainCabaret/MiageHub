<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <!-- ParamÃ¨tres JSF optimiser les uploads -->
    <context-param>
        <param-name>jakarta.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>

    <session-config>
        <!-- Timeout en minutes : 60 min * 24 h * 30 jours = 43200 minutes -->
        <session-timeout>43200</session-timeout>
    </session-config>
    <context-param>
        <param-name>jakarta.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>


    <servlet>
        <servlet-name>FacesServlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <multipart-config>
            <!-- Taille maximum par fichier : 10 Go -->
            <max-file-size>10737418240</max-file-size>

            <!-- Taille maximum pour toute la requÃªte : 10 Go -->
            <max-request-size>10737418240</max-request-size>

            <!-- Seuil Ã  partir duquel les fichiers sont Ã©crits sur disque : 1 Mo -->
            <file-size-threshold>1048576</file-size-threshold>

            <!-- RÃ©pertoire temporaire pour les uploads (optionnel) -->
<!--            <location>/tmp/uploads</location>-->
        </multipart-config>
    </servlet>

    <servlet-mapping>
        <servlet-name>FacesServlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>none</param-value>
    </context-param>

    <context-param>
        <param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- Configuration PrimeFaces -->
    <context-param>
        <param-name>primefaces.UPLOADER</param-name>
        <param-value>native</param-value>
    </context-param>

    <!-- Augmente la taille des uploads pour PrimeFaces -->
    <context-param>
        <param-name>primefaces.FILE_UPLOAD_SIZE_LIMIT</param-name>
        <param-value>10737418240</param-value> <!-- 10 Go -->
    </context-param>

    <!-- Pages d'erreur personnalisÃ©es -->
<!--    <error-page>-->
<!--        <error-code>413</error-code> &lt;!&ndash; Request Entity Too Large &ndash;&gt;-->
<!--        <location>file-too-large.xhtml</location>-->
<!--    </error-page>-->

<!--    <error-page>-->
<!--        <error-code>500</error-code>-->
<!--        <location>server-error.xhtml</location>-->
<!--    </error-page>-->



    <!-- ðŸ”¹ ParamÃ¨tres de sÃ©curitÃ© -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted Files</web-resource-name>
            <url-pattern>*.exe</url-pattern>
            <url-pattern>*.bat</url-pattern>
            <url-pattern>*.com</url-pattern>
            <url-pattern>*.scr</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>


    <mime-mapping>
        <extension>eot</extension>
        <mime-type>application/vnd.ms-fontobject</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>ttf</extension>
        <mime-type>font/ttf</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>font/woff</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>font/woff2</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>svg</extension>
        <mime-type>image/svg+xml</mime-type>
    </mime-mapping>
</web-app>
